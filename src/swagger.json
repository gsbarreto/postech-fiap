{
  "openapi": "3.1.0",
  "info": {
    "title": "Pos-Tech Projeto",
    "description": "Projeto de pedidos para o trabalho da pos tech",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:30100",
      "description": "Caso use rodando pelo Kubernetes"
    },
    {
      "url": "http://localhost:3000",
      "description": "Caso use local usando docker"
    }
  ],
  "paths": {
    "/customer": {
      "post": {
        "summary": "Cadastro de cliente",
        "description": "Essa rota será responsável por cadastrar um novo cliente",
        "tags": ["Customer"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Customer"
              },
              "examples": {
                "customer": {
                  "value": {
                    "name": "Teste",
                    "cpf": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Customer created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "201": {
            "description": "Customer created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          }
        }
      }
    },
    "/customer/cpf/{cpf}": {
      "get": {
        "summary": "Obter cliente por CPF",
        "description": "Esta rota retorna um cliente com base no CPF.",
        "tags": ["Customer"],
        "parameters": [
          {
            "name": "cpf",
            "in": "path",
            "description": "CPF do cliente",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente encontrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Customer"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found!"
          },
          "500": {
            "description": "Customer not found!"
          }
        }
      }
    },
    "/product": {
      "get": {
        "summary": "Obter todos os produtos",
        "description": "Esta rota retorna todos os produtos cadastrados.",
        "tags": ["Product"],
        "responses": {
          "200": {
            "description": "Products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar um novo produto",
        "description": "Esta rota cria um novo produto.",
        "tags": ["Product"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      }
    },
    "/product/{id}": {
      "put": {
        "summary": "Atualizar um produto",
        "description": "Esta rota atualiza um produto existente com base no ID fornecido na URL.",
        "tags": ["Product"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do produto",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Excluir um produto",
        "description": "Esta rota exclui um produto com base no ID fornecido na URL.",
        "tags": ["Product"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do produto",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Product deleted"
          }
        }
      }
    },
    "/product/category/{category}": {
      "get": {
        "summary": "Obter produtos por categoria",
        "description": "Esta rota retorna produtos com base na categoria fornecida na URL.",
        "tags": ["Product"],
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "description": "Categoria do produto",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produtos recuperados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/order": {
      "get": {
        "summary": "Lista de pedidos",
        "description": "Obtem lista de pedidos.",
        "tags": ["Order"],
        "responses": {
          "200": {
            "description": "Orders found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/order/payment/status/{Id}": {
      "get": {
        "summary": "Validar o status do pedido",
        "description": "Validar o status de um pedido .",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "Id",
            "in": "path",
            "description": "Id do pedido",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/order/checkout": {
      "post": {
        "summary": "Realiza o processo de checkout",
        "description": "Esta rota gera um checkout.",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "Id",
            "in": "path",
            "description": "Identificador do Cliente",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Products",
            "in": "body",
            "description": "Produtos do Cliente",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Products"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          }
        }
      }
    },
    "/order/status": {
      "post": {
        "summary": "Atualizar status do pedido",
        "description": "Esta rota atualiza o status do pedido.",
        "tags": ["Order"],
        "responses": {
          "200": {
            "description": "Order updated"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/webhook/payment": {
      "post": {
        "summary": "Webhook de atualização do pagamento de pedido",
        "description": "Webhook de atualização do pagamento de pedido",
        "tags": ["Order"],
        "parameters": [
          {
            "name": "id",
            "in": "body",
            "description": "Id do pedido",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "topic",
            "in": "body",
            "description": "Tópico de alteração do pagamento , requerido pelo Mercado Pago",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "body",
            "description": "Status do pagamento",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment updated"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "images": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      },
      "Products": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date"
          },
          "payment": {
            "$ref": "#/components/schemas/Payment"
          },
          "itens": {
            "type": "array"
          },
          "status": {
            "type": "string"
          },
          "customer": {
            "$ref": "#/components/schemas/Customer"
          }
        }
      },
      "Payment": {
        "type": "object",
        "properties": {
          "qrCode": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      }
    }
  }
}
